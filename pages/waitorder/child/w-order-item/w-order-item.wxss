/* pages/order/child/w-order-item/w-order-item.wxss */
.content .order-item{
  border-radius: 4%;
  height: 345rpx;
  padding: 20rpx;
  background: #fff;
  width: 90%;
  text-align: center;
  justify-content: space-between;
  margin: 20rpx 12rpx;
  position: relative;
  padding-left: 30rpx;
}
.order-flex{
display: flex;
justify-content: space-between;
vertical-align: middle;
text-align: center;
}
.order-flex .img{
  flex: 1;
  width: 200rpx;
  height: 200rpx;
}
.order-flex .order-conetn{
flex: 1;
font-size: 30rpx;
width: 200rpx;
margin-right: 110rpx;
/* position: relative; */
}
.order-flex .img image{
width: 200rpx;
height: 200rpx;
border-radius: 4%;
padding-left: -160rpx;

}
.order-conetn .title{
 width:100%;
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
margin-bottom:0.3rem;
font-size:30rpx;
}
.order-conetn .price{
  position: absolute;
  right: 50rpx;
  top: 112rpx;
  font-size: 32rpx;
  color: #222;
}
.order-conetn .count{
  position: absolute;
  right: 50rpx;
  top: 155rpx;
  font-size: #f2f2f2;
}
.sum view{
  text-align: right;
  padding-right: 10rpx;
  color: #222;
  font-size: 34rpx;
}
.btn{
  text-align: right;
  padding-right: 10rpx;
  margin-top: 30rpx;
}
.btn button{
  border-radius: 50rpx;
}
.order-info{
  display: flex;
  position: absolute;
  right: 10rpx;
}

.confirm-order{
  display: none;
}