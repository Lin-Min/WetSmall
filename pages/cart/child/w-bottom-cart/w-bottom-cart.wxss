.w-bottom-cart{
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-left: 20rpx;
  height: 90rpx;
  font-size: 30rpx;
  background: #eee;
  align-items: center;
  box-shadow: 0 -4rpx 6rpx rgba(0, 0, 0, .1)
}

.w-bottom-cart .cart-left{
  width: 150rpx;
  display: flex;
}

.cart-icon icon{
  margin: 0 10rpx;
}

.crt-cotent{
  flex: 1;
  padding-left: 20rpx;
  font-size: 34rpx;
  color: rgb(32, 31, 31);
}

.cart-count{
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff4500;
  text-align: center;
  color: #fff;
}